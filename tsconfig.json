{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@pages/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"],
      "@enums/*": ["./src/enums/*"],
      "@providers/*": ["./src/providers/*"],
      "@customTypes/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@fixtures/*": ["./tests/fixtures/*"]
    },
    "target": "ES2017"
  },
  "typedocOptions": {
    "name": "Jack Maclennan Portfolio",
    "entryPoints": [
      "src/**",
      "tests/fixtures/**"
    ],
    "out": "docs",
    "plugin": [
      "typedoc-plugin-merge-modules",
      "typedoc-plugin-include-example",
      "typedoc-plugin-github-widget",
      "typedoc-plugin-inline-sources",
      "@zamiell/typedoc-plugin-not-exported"
    ],
    "mergeModulesRenameDefaults": true,
    "mergeModulesMergeMode": "module",
    "githubWidgetUrl": "https://github.com/maclenjack/jack-maclennan-portfolio",
    "sort": ["source-order"],
    "highlightLanguages": ["typescript", "tsx"],
    "navigationLinks": {
      "Website": "https://jack-maclennan-portfolio.vercel.app/"
    },
    "markdownItOptions": {
      "html": true
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./src/**/*",
  ],
  "exclude": ["node_modules"]
}
